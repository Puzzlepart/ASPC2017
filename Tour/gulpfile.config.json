{
  "version": "1.0.0.0",
  "buildOutput": {
    "outputFolder": "dist/",
    "sourceFolder": "src/",
    "lessFiles": [
      "dist/css/*.less",
      "dist/css/**/*.less"
    ],
    "htmlFiles": "dist/txt",
    "tsFiles": [
      "dist/js/*.ts",
      "dist/js/**/*.ts",
      "dist/js/**/**/*.ts"
    ]
  },
  "package": {
    "message": "Creating package {0} under {1}.",
    "prefix": "PZLTOUR-",
    "outputFolder": "releases"
  },
  "watch": {
    "initial": 0,
    "interval": 60000
  }
}